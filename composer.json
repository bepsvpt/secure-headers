{
  "name": "bepsvpt/secure-headers",
  "description": "Add security related headers to HTTP response. The package includes Service Providers for easy Laravel integration.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "laravel",
    "header",
    "https",
    "hsts",
    "csp",
    "except-ct",
    "feature-policy",
    "permissions-policy",
    "clear-site-data",
    "referrer-policy",
    "content-security-policy"
  ],
  "authors": [
    {
      "name": "bepsvpt",
      "email": "6ibrl@cpp.tw"
    }
  ],
  "homepage": "https://github.com/bepsvpt/secure-headers",
  "require": {
    "php": "^7.1 || ^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "ergebnis/composer-normalize": "^2.48",
    "laravel/pint": "^1.25",
    "orchestra/testbench": "^3.1 || ^4.18 || ^5.20 || ^6.47 || ^7.55 || ^8.36 || ^9.15 || ^10.6",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpunit/phpunit": "^5.7 || ^6.5 || ^7.5 || ^8.5 || ^9.6 || ^10.5 || ^11.5 || ^12.4"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Bepsvpt\\SecureHeaders\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Bepsvpt\\SecureHeaders\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "kylekatarnls/update-helper": true,
      "phpstan/extension-installer": true
    },
    "audit": {
      "block-insecure": false
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Bepsvpt\\SecureHeaders\\SecureHeadersServiceProvider"
      ]
    }
  },
  "scripts": {
    "analyse": "phpstan analyse --ansi -vvv --memory-limit=-1",
    "format": [
      "@putenv XDEBUG_MODE=off",
      "pint --ansi -vvv"
    ],
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit"
    ]
  }
}
